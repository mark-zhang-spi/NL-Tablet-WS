<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="15%p"
    android:horizontalGap="0%p"
    android:verticalGap="0%p"
    android:keyHeight="10%p">

    <!--note-->
    <!--the optional %p suffix provides a size relative to some parent container("percent (%) of (P)arent")-->

    <Row>
        <Key android:codes="1"    android:keyLabel="1" android:keyWidth="25%p" />
        <Key android:codes="2"    android:keyLabel="2" android:keyWidth="25%p" />
        <Key android:codes="3"    android:keyLabel="3" android:keyWidth="25%p" />
    </Row>
    <Row>
        <Key android:codes="4"    android:keyLabel="4" android:keyWidth="25%p" />
        <Key android:codes="5"    android:keyLabel="5" android:keyWidth="25%p" />
        <Key android:codes="6"    android:keyLabel="6" android:keyWidth="25%p" />
    </Row>
    <Row>
        <Key android:codes="7"    android:keyLabel="7" android:keyWidth="25%p" />
        <Key android:codes="8"    android:keyLabel="8" android:keyWidth="25%p" />
        <Key android:codes="9"    android:keyLabel="9" android:keyWidth="25%p" />
    </Row>
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-1"   android:keyIcon="@drawable/ic_backspace_black_24dp" android:keyWidth="25%p" />
        <Key android:codes="0"  android:keyLabel="0" android:keyWidth="25%p" />
        <Key android:codes="31" android:keyLabel="Done" android:keyWidth="25%p" />
    </Row>
</Keyboard>