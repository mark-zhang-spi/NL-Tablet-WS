<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/padding_small"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvIndex_ReportRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight=".45"
        android:gravity="center"/>


    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tvLockName_ReportRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tvLockFunc_ReportRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <Spinner
        android:id="@+id/spLockUsers_ReportRow"
        android:visibility="gone"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </Spinner>

    <TextView
        android:id="@+id/tvUserName_ReportRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1.45"
        android:gravity="center"/>

    <TextView
        android:id="@+id/vspUserName_ReportRow"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tvAction_ReportRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight=".75"
        android:gravity="center"/>

    <TextView
        android:id="@+id/vspAction_ReportRow"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tvDateTime_ReportRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:gravity="center"/>

    <TextView
        android:id="@+id/vspDateTime_ReportRow"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tvCredType_ReportRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/vspCredType_ReportRow"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
</LinearLayout>