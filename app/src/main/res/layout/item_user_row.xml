<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_medium">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".1"/>

        <ImageView
            android:id="@+id/ivChangeState_UserRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".75"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUserInfo_UserRow"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName_UserRow"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.2"
            android:textSize="@dimen/button_font_size"/>

        <TextView
            android:id="@+id/tvDept_UserRow"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".8"
            android:textSize="@dimen/label_font_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvState_UserRow"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".8"
            android:textSize="@dimen/button_font_size"/>

        <TextView
            android:id="@+id/tvDTInfo_UserRow"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.2"
            android:textSize="@dimen/label_font_size"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spLocks_UserRow"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </Spinner>
</LinearLayout>
